					"script": {
						"exec": [
							"let data = pm.response.json();",
							"",
							"if (data.access) {",
							"    pm.collectionVariables.set(\"access_token\", data.access);",
							"}",
							"if (data.refresh) {",
							"    pm.collectionVariables.set(\"refresh_token\", data.refresh);",
							"}",
							"",
							"let now = new Date();",
							"let expireAt = new Date(now.getTime() + 10 * 60 * 1000);",
							"",
							"pm.collectionVariables.set(\"expire_at\", expireAt.toISOString());",
							""
